{
  "name": "reelio",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server/server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "test": "standard && jest server/tests/.*.test.js",
    "install-all": "npm install && cd client && npm install",
    "fix": "standard --fix"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "glob": "^7.1.4",
    "mongoose": "^5.6.9"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "concurrently": "^4.1.1",
    "jest": "24.8.0",
    "nodemon": "^1.19.1",
    "standard": "^13.1.0"
  },
  "standard": {
    "globals": [
      "fetch",
      "it",
      "test",
      "expect"
    ],
    "parser": "babel-eslint"
  }
}
